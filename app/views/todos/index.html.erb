<h1>任务清单（To-do list）</h1>

<%= link_to '新建任务...', new_todo_path %>

<table>
  <tr>
    <th>名称</th>
    <th>已完成？</th>
    <th>重要？</th>
    <th>修改</th>
    <th>删除</th>
  </tr>
  
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.name %></td>
      <td><%= todo.done %></td>
      <td><%= todo.important %></td>
      <td><%= link_to '改', edit_todo_path(todo) %></td>
      <td><%= link_to '删', todo_path(todo), data: {
        turbo_method: :delete,
        turbo_confirm: "删除任务？"
      } %></td>
    </tr>
  <% end %>
<table>
