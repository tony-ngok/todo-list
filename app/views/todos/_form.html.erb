<%= form_for @todo do |f| %> 
  <% if @todo.errors.any? %>
    <h3>存在以下<%= @todo.errors.size %>個错误：</h3>
    <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :name, '事件名' %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :done, '完成？' %>
    <%= f.check_box :done %>
  </p>

  <p>
    <%= f.label :important, '重要' %>
    <%= f.check_box :important %>
  </p>

  <p>
    <%= f.submit "提交事件" %>
  </p>
<% end %>
